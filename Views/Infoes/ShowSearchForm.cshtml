<div class="container mt-5">
    <div class="jumbotron text-center bg-light p-5">
        <h1 class="display-4">Search For Information</h1>
        <p class="lead">Find the information you need quickly.</p>
        <hr class="my-4">
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="ShowSearchResults">
                <div class="form-group mb-4">
                    <!-- Added margin-bottom -->
                    <label for="SearchPhrase" class="control-label">Search Phrase</label>
                    <input name="SearchPhrase" class="form-control" />
                </div>
                <div class="form-group text-center mt-3">
                    <!-- Added margin-top -->
                    <input type="submit" value="Search" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-6 text-center">
            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    </div>
</div>
