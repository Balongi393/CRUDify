@model CRUDify_Simplifying_data_management_with_ASP.NET.Models.Info

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-light p-5">
        <h1 class="display-4">Delete Entry</h1>
        <p class="lead">Are you sure you want to delete this entry?</p>
        <hr class="my-4">
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Info</h4>
                    <hr />
                    <dl class="row mb-4">
                        <!-- Added margin-bottom -->
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Information)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Information)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Details)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Details)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center mt-3">
                            <!-- Added margin-top -->
                            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ensure you have included FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
